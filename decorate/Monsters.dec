ACTOR DSBossEye : AetheriusBossZSC replaces BossEye
{
	Height 32
	+NOBLOCKMAP
	+NOSECTOR
	+BOSS
	var int user_bosseyetype;
	States
	{
		Spawn:
			SSWV A 10 A_Look
			Loop
		See:
			SSWV A 181 
			{
				if (GetCVar("dvds_improvediconofsin") > 0) 
				{
					A_PlaySound("brain/sight2", CHAN_VOICE, 1, false, ATTN_NONE);
					user_bosseyetype = 1;
				}
				else
				{
					A_PlaySound("brain/sight", CHAN_VOICE, 1, false, ATTN_NONE);
				}
			}
			SSWV A 150 
			{
				if (user_bosseyetype > 0) 
				{
					A_SetTics(random(90,110));
					A_BrainSpit("DSSpawnShot");
					A_PlaySound("brain/spit", CHAN_WEAPON, 1, false, ATTN_NONE);
				}
				else
				{
					A_SetTics(random(135,165));
					A_BrainSpit("SpawnShot");
					A_PlaySound("brain/spit", CHAN_WEAPON, 1, false, ATTN_NONE);
				}
			}
			Wait
	}
}