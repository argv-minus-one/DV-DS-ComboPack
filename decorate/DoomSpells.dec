// Minor Magic Missile
actor MinorMagicMissile : AetheriusProjectileZSC // : SerpentFX
{
	Speed 16 // **
	Radius 2 // **
	Height 2 // **
	Damage (4 + random(-1,1)) // ** 2-4 (2)
	Projectile // **
	+ACTIVATEIMPACT // **
	+ACTIVATEPCROSS // **
	RenderStyle Add // **

	DamageType "Magic"
	+FLOORCLIP
	+FORCERADIUSDMG
	+MTHRUSPECIES
	+THRUSPECIES
	+HITTRACER
	+SPECTRAL
	+DONTREFLECT
	species "Players"
	seesound "mmissilelaunch"
	deathsound "mmissileimpact" // **

	+BOUNCEONWALLS
	+BOUNCEONFLOORS
	+BOUNCEONCEILINGS
	+NOBOUNCESOUND
	+EXPLODEONWATER
	+DONTBOUNCEONSHOOTABLES
	+SKYEXPLODE
	BounceType "Hexen"
	BounceFactor 1.25
	WallBounceFactor 1.25
	BounceCount 256

	var int user_BaseDamage;
	var int user_DamageError;
	var int user_BaseExplodeDamage;
	var int user_ExplodeDamageError;
	var int user_Fuse;
	Scale 0.2 // 0.75
	Alpha 0.67 

	States
	{
		Spawn:
			UMM1 A 0 Bright NoDelay A_Playsound("mmissilebuzz",3,0.22)
			UMM1 AAABBB 1 Bright
			{
				A_CustomMissile("MMMParticle",0,0,random(0,359),6,random(0,359));
				user_Fuse += 1;
				if (user_Fuse >= 140) { return state("Death"); }
				return state("");
			}
			goto Spawn+1

		Death: 
			UMM1 C 0 Bright A_ScaleVelocity(0)
			UMM1 C 4 Bright A_SetScale(0.1) // Bright A_StopSoundEx("Body") 
			UMM1 D 4 Bright A_Explode((2 + random(-1,1)),8,0,0,2)
			UMM1 EFGH 4 Bright 
			Stop 
	}
}

actor MinorMagicMissileSeek : MinorMagicMissile
{
	+SEEKERMISSILE
	+USEBOUNCESTATE

	States
	{
		Spawn:
			UMM1 A 0 Bright NoDelay A_Playsound("mmissilebuzz",3,0.22)
			UMM1 AAABBB 1 Bright
			{
				A_CustomMissile("MMMParticle",0,0,random(0,359),6,random(0,359));
				user_Fuse += 1;
				if (user_noseektimer > 0) 
				{ 
					A_MMCheckNoSeekTimer(16,2);
				}
				else
				{
					A_MMSeek(2);
				}
				if (user_Fuse >= 140) { return state("Death"); }
				return state("");
			}
			goto Spawn+1

		Bounce:
			UMM1 A 0 Bright { A_MMSeekerClearBounce(6,1); }
			goto Spawn+1

	}
}


