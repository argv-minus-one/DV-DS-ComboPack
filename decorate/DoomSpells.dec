	States
	{
		Spawn:
			SPIR A 0 Bright NoDelay 
			{
				user_fuse = 5 * random(8,12);
				A_ScaleVelocity(1.5);
			}
		Active:
			SPIR AAAABBBB 1 
			{
				A_Weave(frandom(2.0,4.0), frandom(2.0,4.0), 4.0, 4.0);		
				user_seek++;
				if (user_seek >= 2) { A_SeekerMissile(90,90,SMF_LOOK|SMF_PRECISE|SMF_CURSPEED,256,64); user_seek = 0; }	
			}
			SPIR B 0 
			{
				if (random(1,256) >= 236) { A_PlaySound("SpiritActive",CHAN_VOICE); }
				user_fuse -= 1;
				if (user_fuse <= 0) { return state("Death"); }
				return state("");
			}
			loop
		Death:
			SPIR D 0 A_ScaleVelocity(0)
			SPIR D 4
			SPIR E 4 A_Scream
			SPIR FGHI 4
			Stop
	}
}

