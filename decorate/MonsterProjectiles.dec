actor DiabloistGravityHPTargeter : AetheriusProjectileZSC
{
	var int user_timer;
	var int user_timer_times;
	var int user_timer_timesmax;
	PROJECTILE
	+SEEKERMISSILE
	States
	{
		Spawn:
			TNT1 A 0 NoDelay { user_timer_timesmax = 36; }
			goto Idle
		Idle:
			TNT1 AA 1
			{
				A_Fire(24);
				
				user_timer += 1;
				if (user_timer >= 2) 
				{
					A_SpawnItemEx("DiabloistHPGlitter",24,0,0,0,0,0,0,32,0);
					user_timer = 0; 
					user_timer_times += 1; 
				}
				if (user_timer_times >= user_timer_timesmax) 
				{
					A_FadeOut(1.0,1);
				}
			}
			loop
	}
}

