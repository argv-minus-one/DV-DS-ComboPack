			else // Normal or DVII
			{
				if (random(1,320) <= evolvechance)
				{
					if (random(1,384) <= evolvechance)
					{
						if (random(1,448) <= evolvechance)
						{
							if (CanFitHere("HadesOverlord")) return "HadesOverlord";
							else if (CanFitHere("HadesElemental")) return "HadesElemental";
							else return "Abaddon";
						}
						else
						{
